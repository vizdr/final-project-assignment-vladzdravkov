#!/bin/sh
### BEGIN INIT INFO
# Provides:          can-server
# Required-Start:    $network
# Required-Stop:     
# Default-Start:     2 3 4 5
# Default-Stop:      
# Short-Description: CAN Socket Detection Sender
### END INIT INFO

DAEMON=/usr/bin/can_send_detection
PIDFILE=/var/run/can-server.pid
NAME=can-server
CAN_IFACE=can0
CAN_BITRATE=500000  # Adjust if needed

bringup_can() {
    # Load required kernel modules
    modprobe can
    modprobe can_raw
    modprobe mcp251x

    # Bring up CAN interface
    ip link set $CAN_IFACE down 2>/dev/null
    ip link set $CAN_IFACE up type can bitrate $CAN_BITRATE
}

start() {
    echo "Starting $NAME..."

    # Ensure CAN interface is up
    bringup_can

    # Start the daemon in background
    start-stop-daemon -S -b -m -p $PIDFILE -x $DAEMON
}

stop() {
    echo "Stopping $NAME..."
    start-stop-daemon -K -p $PIDFILE

    # Optionally bring down CAN interface
    ip link set $CAN_IFACE down
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        start
        ;;
    status)
        if [ -f $PIDFILE ]; then
            echo "$NAME is running with PID $(cat $PIDFILE)"
        else
            echo "$NAME is not running"
        fi
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|status}"
        exit 1
        ;;
esac

exit 0